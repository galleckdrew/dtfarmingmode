<!-- views/driver-history.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Driver History</title>
  <style>
    body {
      background: url('/login-bg.png') no-repeat center center fixed;
      background-size: cover;
      font-family: Arial, sans-serif;
      color: #000;
    }
    table {
      width: 95%;
      margin: 20px auto;
      border-collapse: collapse;
      background: rgba(220, 220, 220, 0.8);
      color: #000;
    }
    th, td {
      padding: 12px;
      border: 1px solid #999;
      text-align: left;
    }
    th {
      background: #ccc;
    }
    h1 {
      text-align: center;
      margin-top: 20px;
    }
    .totals {
      width: 95%;
      margin: 10px auto;
      padding: 10px;
      background: rgba(200, 200, 200, 0.85);
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }
    .filters {
      width: 95%;
      margin: 20px auto;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      background: rgba(240, 240, 240, 0.8);
      padding: 10px;
      border-radius: 6px;
    }
    .filters label {
      font-weight: bold;
      margin-right: 4px;
    }
    .btn {
      background-color: #444;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      text-decoration: none;
      margin: 0 4px;
      cursor: pointer;
    }
    .btn:hover {
      background-color: #666;
    }
    .yellow-row {
      background-color: #fff8dc !important;
    }
    form {
      display: inline;
    }
  </style>
</head>
<body>
  <h1>Driver History</h1>

  <div class="totals">
    <p>Total Loads: <%= totalLoads %></p>
    <p>Total Gallons: <%= totalGallons %></p>
    <p>Total Hours: <%= totalHours %></p>
    <p>Total Fuel Used: <%= totalFuel %></p>
    <p>Total Transfer Hours: <%= totalTransferHours %></p>
  </div>

  <form class="filters" method="GET" action="/driver-history">
    <div>
      <label for="farm">Farm:</label>
      <select name="farm" id="farm">
        <option value="">All</option>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>" <%= farm === f._id ? 'selected' : '' %>><%= f.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label for="field">Field:</label>
      <select name="field" id="field">
        <option value="">All</option>
        <% fields.forEach(fl => { %>
          <option value="<%= fl._id %>" <%= field === fl._id ? 'selected' : '' %>><%= fl.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label for="tractor">Tractor:</label>
      <select name="tractor" id="tractor">
        <option value="">All</option>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>" <%= tractor === t._id ? 'selected' : '' %>><%= t.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label for="type">Type:</label>
      <select name="type" id="type">
        <option value="">All</option>
        <option value="load">Load</option>
        <option value="fuel">Fuel</option>
        <option value="transfer-start">Transfer Start</option>
        <option value="transfer-end">Transfer End</option>
        <option value="trailer">Pump</option>
        <option value="sand">Sand</option>
      </select>
    </div>
    <div>
      <label for="from">From:</label>
      <input type="date" name="from" id="from" value="<%= from || '' %>">
    </div>
    <div>
      <label for="to">To:</label>
      <input type="date" name="to" id="to" value="<%= to || '' %>">
    </div>
    <div>
      <button type="submit" class="btn">Apply Filters</button>
    </div>
  </form>

  <table>
    <thead>
      <tr>
        <th>Timestamp</th>
        <th>Type</th>
        <th>Tractor</th>
        <th>Farm</th>
        <th>Field & Pit</th>
        <th>Gallons</th>
        <th>Hours</th>
        <th>Transfer Start</th>
        <th>Transfer End</th>
        <th>Pump</th>
        <th>Fuel</th>
        <th>Sand</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% allEntries.forEach(entry => { %>
        <% const type = entry.type; const data = entry.data; const isFuel = type === 'fuel'; %>
        <tr class="<%= isFuel ? 'yellow-row' : '' %>">
          <td><%= new Date(data.timestamp).toLocaleString() %></td>
          <td><%= type %></td>
          <td><%= data.tractor?.name || '-' %></td>
          <td><%= data.farm?.name || '-' %></td>
          <td><%= (data.field?.name || '-') + ' / ' + (data.pit?.name || '-') %></td>
          <td>
            <% if (type === 'load') { %>
              <%= data.gallons %>
            <% } else if (type === 'fuel') { %>
              <%= data.amount %>
            <% } %>
          </td>
          <td>
            <% if (type === 'load') { %>
              <%= data.totalHours || '-' %>
            <% } %>
          </td>
          <td>
            <% if (type === 'transfer-start') { %>
              <%= data.startHour %>
            <% } %>
          </td>
          <td>
            <% if (type === 'transfer-end') { %>
              <%= data.endHour %>
            <% } %>
          </td>
          <td>
            <% if (type === 'trailer') { %>
              <%= data.trailer %>
            <% } %>
          </td>
          <td>
            <% if (type === 'fuel') { %>
              <%= data.amount %>
            <% } %>
          </td>
          <td>
            <% if (type === 'sand') { %>
              <%= data.sand %>
            <% } %>
          </td>
          <td>
            <% if (type === 'load') { %>
              <a href="/edit-load/<%= data._id %>" class="btn">Edit</a>
              <form method="POST" action="/delete-load/<%= data._id %>">
                <button type="submit" class="btn">Delete</button>
              </form>
            <% } else if (type === 'fuel') { %>
              <a href="/edit-fuel/<%= data._id %>" class="btn">Edit</a>
              <form method="POST" action="/delete-fuel/<%= data._id %>">
                <button type="submit" class="btn">Delete</button>
              </form>
            <% } else { %>
              <a href="/edit-transfer/<%= data._id %>" class="btn">Edit</a>
              <form method="POST" action="/delete-transfer/<%= data._id %>">
                <button type="submit" class="btn">Delete</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
