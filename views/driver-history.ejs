<!-- views/driver-history.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Driver History</title>
  <style>
    body {
      background: url('/login-bg.png') no-repeat center center fixed;
      background-size: cover;
      font-family: Arial, sans-serif;
      color: #000;
    }
    table {
      width: 95%;
      margin: 20px auto;
      border-collapse: collapse;
      background: rgba(220, 220, 220, 0.8);
      color: #000;
    }
    th, td {
      padding: 12px;
      border: 1px solid #999;
      text-align: left;
    }
    th {
      background: #ccc;
    }
    h1 {
      text-align: center;
      margin-top: 20px;
    }
    .totals {
      width: 95%;
      margin: 10px auto;
      padding: 10px;
      background: rgba(200, 200, 200, 0.85);
      display: flex;
      justify-content: space-around;
    }
    .btn {
      background-color: #444;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      text-decoration: none;
      margin: 0 4px;
      cursor: pointer;
    }
    .btn:hover {
      background-color: #666;
    }
    .yellow-row {
      background-color: #fff8dc !important;
    }
    form {
      display: inline;
    }
  </style>
</head>
<body>
  <h1>Driver History</h1>

  <div class="totals">
    <p>Total Loads: <%= totalLoads %></p>
    <p>Total Gallons: <%= totalGallons %></p>
    <p>Total Hours: <%= totalHours %></p>
    <p>Total Fuel Used: <%= totalFuel %></p>
  </div>

  <table>
    <thead>
      <tr>
        <th>Timestamp</th>
        <th>Type</th>
        <th>Tractor</th>
        <th>Farm</th>
        <th>Field & Pit</th>
        <th>Gallons</th>
        <th>Hours</th>
        <th>Transfer Start</th>
        <th>Transfer End</th>
        <th>Pump</th>
        <th>Fuel</th>
        <th>Sand</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% allEntries.forEach(entry => { %>
        <% const type = entry.type; const data = entry.data; const isFuel = type === 'fuel'; %>
        <tr class="<%= isFuel ? 'yellow-row' : '' %>">
          <td><%= new Date(data.timestamp).toLocaleString() %></td>
          <td><%= type %></td>
          <td><%= data.tractor?.name || '-' %></td>
          <td><%= data.farm?.name || '-' %></td>
          <td><%= (data.field?.name || '-') + ' / ' + (data.pit?.name || '-') %></td>
          <td>
            <% if (type === 'load') { %>
              <%= data.gallons %>
            <% } else if (type === 'fuel') { %>
              <%= data.amount %>
            <% } %>
          </td>
          <td>
            <% if (type === 'load') { %>
              <%= data.totalHours || '-' %>
            <% } %>
          </td>
          <td>
            <% if (type === 'transfer-start') { %>
              <%= data.startHour %>
            <% } %>
          </td>
          <td>
            <% if (type === 'transfer-end') { %>
              <%= data.endHour %>
            <% } %>
          </td>
          <td>
            <% if (type === 'trailer') { %>
              <%= data.trailer %>
            <% } %>
          </td>
          <td>
            <% if (type === 'fuel') { %>
              <%= data.amount %>
            <% } %>
          </td>
          <td>
            <% if (type === 'sand') { %>
              <%= data.sand %>
            <% } %>
          </td>
          <td>
            <% if (type === 'load') { %>
              <a href="/edit-load/<%= data._id %>" class="btn">Edit</a>
              <form method="POST" action="/delete-load/<%= data._id %>">
                <button type="submit" class="btn">Delete</button>
              </form>
            <% } else if (type === 'fuel') { %>
              <a href="/edit-fuel/<%= data._id %>" class="btn">Edit</a>
              <form method="POST" action="/delete-fuel/<%= data._id %>">
                <button type="submit" class="btn">Delete</button>
              </form>
            <% } else { %>
              <a href="/edit-transfer/<%= data._id %>" class="btn">Edit</a>
              <form method="POST" action="/delete-transfer/<%= data._id %>">
                <button type="submit" class="btn">Delete</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
