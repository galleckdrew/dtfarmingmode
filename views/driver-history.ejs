<!-- views/driver-history.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>D&T Manure Hauling - Driver History</title>
  <style>
    body {
      background: url('/login-bg.png') no-repeat center center fixed;
      background-size: cover;
      font-family: Arial, sans-serif;
      color: #000;
    }
    table {
      width: 95%;
      margin: 20px auto;
      border-collapse: collapse;
      background: rgba(220, 220, 220, 0.8);
      color: #000;
    }
    th, td {
      padding: 12px;
      border: 1px solid #999;
      text-align: left;
    }
    th {
      background: #ccc;
    }
    h1 {
      text-align: center;
      margin-top: 20px;
      color: #fff;
    }
    .print-btn {
      text-align: center;
      margin-bottom: 15px;
    }
    .print-btn button {
      background-color: #444;
      color: white;
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    .print-btn button:hover {
      background-color: #666;
    }
    .totals, .filters {
      width: 95%;
      margin: 20px auto;
      background: rgba(240, 240, 240, 0.8);
      padding: 10px;
      border-radius: 6px;
    }
    .totals {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }
    .filters {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
    .filters label {
      font-weight: bold;
    }
    .btn {
      background-color: #444;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      text-decoration: none;
      margin: 0 4px;
      cursor: pointer;
    }
    .btn:hover {
      background-color: #666;
    }
    .yellow-row {
      background-color: #fff8dc !important;
    }
    form {
      display: inline;
    }
    @media print {
      .print-btn, .filters, .btn {
        display: none !important;
      }
      body {
        background: none;
      }
    }
  </style>
</head>
<body>
  <h1>D&T Manure Hauling - Driver History</h1>

  <div class="print-btn">
    <button onclick="window.print()">Print Report</button>
  </div>

  <div class="totals">
    <p>Total Loads: <%= totalLoads %></p>
    <p>Total Gallons: <%= totalGallons %></p>
    <p>Total Hours: <%= totalHours %></p>
    <p>Total Fuel Used: <%= totalFuel %></p>
    <p>Total Transfer Hours: <%= totalTransferHours %></p>
  </div>

  <form class="filters" method="GET" action="/driver-history">
    <div>
      <label for="farm">Farm:</label>
      <select name="farm" id="farm">
        <option value="">All</option>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>" <%= farm === f._id ? 'selected' : '' %>><%= f.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label for="field">Field:</label>
      <select name="field" id="field">
        <option value="">All</option>
        <% fields.forEach(fl => { %>
          <option value="<%= fl._id %>" <%= field === fl._id ? 'selected' : '' %>><%= fl.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label for="tractor">Tractor:</label>
      <select name="tractor" id="tractor">
        <option value="">All</option>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>" <%= tractor === t._id ? 'selected' : '' %>><%= t.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label for="type">Type:</label>
      <select name="type" id="type">
        <option value="">All</option>
        <option value="load">Load</option>
        <option value="fuel">Fuel</option>
        <option value="transfer-start">Transfer Start</option>
        <option value="transfer-end">Transfer End</option>
        <option value="trailer">Pump</option>
        <option value="sand">Sand</option>
      </select>
    </div>
    <div>
      <label for="from">From:</label>
      <input type="date" name="from" id="from" value="<%= from || '' %>">
    </div>
    <div>
      <label for="to">To:</label>
      <input type="date" name="to" id="to" value="<%= to || '' %>">
    </div>
    <div>
      <button type="submit" class="btn">Apply Filters</button>
    </div>
  </form>

  <table>
    <thead>
      <tr>
        <th>Timestamp</th>
        <th>Type</th>
        <th>Tractor</th>
        <th>Farm</th>
        <th>Field & Pit</th>
        <th>Gallons</th>
        <th>Total Hours</th>
        <th>Start Hour (Load)</th>
        <th>End Hour (Load)</th>
        <th>Start Hour (Transfer)</th>
        <th>End Hour (Transfer)</th>
        <th>Pump</th>
        <th>Fuel</th>
        <th>Sand</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% allEntries.forEach(entry => { %>
        <% const type = entry.type; const data = entry.data; const isFuel = type === 'fuel'; %>
        <tr class="<%= isFuel ? 'yellow-row' : '' %>">
          <td><%= new Date(data.timestamp).toLocaleString() %></td>
          <td><%= type %></td>
          <td><%= data.tractor?.name || '-' %></td>
          <td><%= data.farm?.name || '-' %></td>
          <td><%= (data.field?.name || '-') + ' / ' + (data.pit?.name || '-') %></td>
          <td><%= type === 'load' ? data.gallons : type === 'fuel' ? data.amount : '' %></td>
          <td><%= data.totalHours || '-' %></td>
          <td><%= type === 'load' ? data.startHour || '-' : '' %></td>
          <td><%= type === 'load' ? data.endHour || '-' : '' %></td>
          <td><%= type === 'transfer' ? data.startHour || '-' : '' %></td>
          <td><%= type === 'transfer' ? data.endHour || '-' : '' %></td>
          <td><%= type === 'trailer' ? data.trailer : '' %></td>
          <td><%= type === 'fuel' ? data.amount : '' %></td>
          <td><%= type === 'sand' ? data.sand : '' %></td>
          <td>
<% if (type === 'load') { %>
  <form method="POST" action="/edit-load/<%= data._id %>">
    <!-- Field dropdown -->
    <select name="fieldId" required>
      <% fields.forEach(f => { %>
        <option value="<%= f._id %>" <%= data.field?._id?.toString() === f._id.toString() ? 'selected' : '' %>>
          <%= f.name %>
        </option>
      <% }) %>
    </select>

    <!-- Timestamp -->
    <input type="datetime-local" name="timestamp" value="<%= new Date(data.timestamp).toISOString().slice(0, 16) %>" required>

    <!-- Gallons -->
    <input type="number" name="gallons" step="0.01" placeholder="Gallons" value="<%= data.gallons || '' %>" required>

    <!-- Start Hour -->
    <input type="number" name="startHour" step="0.01" placeholder="Start Hour" value="<%= data.startHour || '' %>">

    <!-- End Hour -->
    <input type="number" name="endHour" step="0.01" placeholder="End Hour" value="<%= data.endHour || '' %>">

    <!-- Save Button -->
    <button type="submit" class="btn">Save</button>
  </form>

  <!-- Delete Button -->
  <form method="POST" action="/delete-load/<%= data._id %>">
    <button type="submit" class="btn">Delete</button>
  </form>
<% } else if (type === 'fuel') { %>
  <a href="/edit-fuel/<%= data._id %>" class="btn">Edit</a>
  <form method="POST" action="/delete-fuel/<%= data._id %>">
    <button type="submit" class="btn">Delete</button>
  </form>
<% } else { %>
  <a href="/edit-transfer/<%= data._id %>" class="btn">Edit</a>
  <form method="POST" action="/delete-transfer/<%= data._id %>">
    <button type="submit" class="btn">Delete</button>
  </form>
<% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
