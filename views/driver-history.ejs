<!DOCTYPE html>
<html>
<head>
  <title>üöú Driver History</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: url('/login-bg.png') no-repeat center center fixed;
      background-size: cover;
      margin: 0;
      padding: 0;
      color: #fff;
    }
    .container {
      background-color: rgba(0, 0, 0, 0.7);
      padding: 30px;
      margin: 50px auto;
      max-width: 1000px;
      border-radius: 10px;
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
    }
    .summary {
      font-weight: bold;
      font-size: 1.2em;
      margin-bottom: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #fff;
      color: #000;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #f2f2f2;
    }
    .fuel-row {
      background-color: #fffbe6;
      font-style: italic;
    }
    .transfer-row {
      background-color: #e6f5ff;
      font-style: italic;
    }
    .actions {
      display: flex;
      gap: 10px;
      justify-content: center;
    }
    button {
      padding: 4px 8px;
    }
    .filter-form {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>D&T Manure Hauling - Driver History</h1>

    <form class="filter-form" method="GET" action="/driver-history">
      <label>Date From: <input type="date" name="from" value="<%= from || '' %>"></label>
      <label>Date To: <input type="date" name="to" value="<%= to || '' %>"></label>
      <label>Tractor:
        <select name="tractor">
          <option value="">All</option>
          <% tractors.forEach(t => { %>
            <option value="<%= t._id %>" <%= t._id.toString() === tractor ? 'selected' : '' %>><%= t.name %></option>
          <% }) %>
        </select>
      </label>
      <label>Farm:
        <select name="farm">
          <option value="">All</option>
          <% farms.forEach(f => { %>
            <option value="<%= f._id %>" <%= f._id.toString() === farm ? 'selected' : '' %>><%= f.name %></option>
          <% }) %>
        </select>
      </label>
      <label>Field:
        <select name="field">
          <option value="">All</option>
          <% fields.forEach(f => { %>
            <option value="<%= f._id %>" <%= f._id.toString() === field ? 'selected' : '' %>><%= f.name %></option>
          <% }) %>
        </select>
      </label>
      <button type="submit">Filter</button>
      <button type="button" onclick="window.print()">üñ®Ô∏è Print</button>
    </form>

    <div class="summary">
      Total Loads: <%= totalLoads %> |
      Total Gallons: <%= totalGallons %> |
      Total Hours: <%= totalHours.toFixed(2) %> |
      Total Fuel: <%= totalFuel.toFixed(2) %> gal
    </div>

    <table>
      <thead>
        <tr>
          <th>Date & Time</th>
          <th>Tractor</th>
          <th>Farm</th>
          <th>Field</th>
          <th>Pit</th>
          <th>Gallons</th>
          <th>Start Hour</th>
          <th>End Hour</th>
          <th>Total Hours</th>
          <th>Fuel / Sand / Trailer</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% allEntries.forEach(entry => { %>
          <% if (entry.type === 'load') { const load = entry.data; %>
            <tr>
              <td><%= new Date(load.timestamp).toLocaleString("en-US", { timeZone: "America/New_York", hour12: true }) %></td>
              <td><%= load.tractor?.name || '' %></td>
              <td><%= load.farm?.name || '' %></td>
              <td><%= load.field?.name || '' %></td>
              <td><%= load.pit?.name || '' %></td>
              <td><%= load.gallons %></td>
              <td><%= load.startHour ?? '' %></td>
              <td><%= load.endHour ?? '' %></td>
              <td><%= load.totalHours?.toFixed(2) ?? '' %></td>
              <td></td>
              <td class="actions">
                <form method="GET" action="/driver-history/<%= load._id %>/edit">
                  <button>Edit</button>
                </form>
                <form method="POST" action="/driver-history/<%= load._id %>?_method=DELETE">
                  <button>Delete</button>
                </form>
              </td>
            </tr>
          <% } else if (entry.type === 'fuel') { const fuel = entry.data; %>
            <tr class="fuel-row">
              <td><%= new Date(fuel.timestamp).toLocaleString("en-US", { timeZone: "America/New_York", hour12: true }) %></td>
              <td><%= fuel.tractor?.name || '' %></td>
              <td><%= fuel.farm || '' %></td>
              <td><%= fuel.field?.name || '' %></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td><strong><%= fuel.amount %> gal</strong></td>
              <td></td>
            </tr>
          <% } else if (entry.type === 'transfer') { const t = entry.data; %>
            <tr class="transfer-row">
              <td><%= new Date(t.timestamp).toLocaleString("en-US", { timeZone: "America/New_York", hour12: true }) %></td>
              <td><%= t.tractor?.name || '' %></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td><%= t.startHour ?? '' %></td>
              <td><%= t.endHour ?? '' %></td>
              <td><%= t.totalHours?.toFixed(2) ?? '' %></td>
              <td>
                <% if (t.trailer) { %>üöõ <%= t.trailer %><br><% } %>
                <% if (t.sand) { %>ü™® <%= t.sand %><% } %>
              </td>
              <td></td>
            </tr>
          <% } %>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
