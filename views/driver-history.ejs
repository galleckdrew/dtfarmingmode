<!DOCTYPE html>
<html>
<head>
  <title>üöú Driver History</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background: url('/login-bg.png') no-repeat center center fixed;
      background-size: cover;
      color: #000;
    }
    .container {
      background-color: rgba(255,255,255,0.92);
      border-radius: 10px;
      padding: 20px;
    }
    h1 {
      text-align: center;
      margin-bottom: 10px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: #fff;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #f2f2f2;
    }
    .filter-form {
      margin-bottom: 20px;
    }
    .summary {
      margin: 20px 0;
      font-weight: bold;
    }
    .actions {
      display: flex;
      gap: 10px;
      justify-content: center;
    }
    .actions form {
      display: inline;
    }
    button {
      padding: 4px 8px;
    }
    .fuel-row {
      background-color: #fffbe6;
      font-style: italic;
    }
    .transfer-row {
      background-color: #e8f4ff;
      font-style: italic;
    }
    .sand-row {
      background-color: #f3f3f3;
      font-style: italic;
    }
    .trailer-row {
      background-color: #e0e0e0;
      font-style: italic;
    }
    .category-label {
      font-size: 1.1em;
      font-weight: bold;
      margin-top: 30px;
      padding-top: 10px;
      border-top: 2px solid #333;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üöú Driver Load & Fuel History</h1>

    <!-- Filter Form -->
    <form class="filter-form" method="GET" action="/driver-history">
      <label>Date From: <input type="date" name="from" value="<%= from || '' %>"></label>
      <label>Date To: <input type="date" name="to" value="<%= to || '' %>"></label>
      <label>Tractor:
        <select name="tractor">
          <option value="">All</option>
          <% tractors.forEach(t => { %>
            <option value="<%= t._id %>" <%= t._id.toString() === tractor ? 'selected' : '' %>><%= t.name %></option>
          <% }) %>
        </select>
      </label>
      <label>Farm:
        <select name="farm">
          <option value="">All</option>
          <% farms.forEach(f => { %>
            <option value="<%= f._id %>" <%= f._id.toString() === farm ? 'selected' : '' %>><%= f.name %></option>
          <% }) %>
        </select>
      </label>
      <label>Field:
        <select name="field">
          <option value="">All</option>
          <% fields.forEach(f => { %>
            <option value="<%= f._id %>" <%= f._id.toString() === field ? 'selected' : '' %>><%= f.name %></option>
          <% }) %>
        </select>
      </label>
      <button type="submit">Filter</button>
      <button type="button" onclick="window.print()">üñ®Ô∏è Print</button>
    </form>

    <!-- Summary -->
    <div class="summary">
      Total Loads: <%= totalLoads %> |
      Total Gallons: <%= totalGallons %> |
      Total Hours: <%= totalHours.toFixed(2) %> |
      Total Fuel: <%= totalFuel.toFixed(2) %> gal
    </div>

    <!-- Load Table -->
    <table>
      <thead>
        <tr>
          <th>Date & Time</th>
          <th>Tractor</th>
          <th>Farm</th>
          <th>Field</th>
          <th>Pit</th>
          <th>Gallons</th>
          <th>Start Hour</th>
          <th>End Hour</th>
          <th>Total Hours</th>
          <th>Fuel / Transfer</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% allEntries.forEach(entry => { %>
          <% if (entry.type === 'load') { const load = entry.data; %>
            <tr>
              <td><%= new Date(load.timestamp).toLocaleString("en-US", { timeZone: "America/New_York", hour12: true }) %></td>
              <td><%= load.tractor?.name || '' %></td>
              <td><%= load.farm?.name || '' %></td>
              <td><%= load.field?.name || '' %></td>
              <td><%= load.pit?.name || '' %></td>
              <td><%= load.gallons ?? '' %></td>
              <td><%= load.startHour ?? '' %></td>
              <td><%= load.endHour ?? '' %></td>
              <td><%= load.totalHours?.toFixed(2) ?? '' %></td>
              <td></td>
              <td class="actions">
                <form method="GET" action="/driver-history/<%= load._id %>/edit">
                  <button>Edit</button>
                </form>
                <form method="POST" action="/driver-history/<%= load._id %>?_method=DELETE">
                  <button>Delete</button>
                </form>
              </td>
            </tr>
          <% } else if (entry.type === 'fuel') { const fuel = entry.data; %>
            <tr class="fuel-row">
              <td><%= new Date(fuel.timestamp).toLocaleString("en-US", { timeZone: "America/New_York", hour12: true }) %></td>
              <td><%= fuel.tractor?.name || '' %></td>
              <td><%= fuel.farm || '' %></td>
              <td><%= fuel.field?.name || '' %></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td><strong><%= fuel.amount %> gal</strong></td>
              <td></td>
            </tr>
          <% } else if (entry.type === 'transfer') { const transfer = entry.data; %>
            <tr class="transfer-row">
              <td><%= new Date(transfer.timestamp).toLocaleString("en-US", { timeZone: "America/New_York", hour12: true }) %></td>
              <td><%= transfer.tractor?.name || '' %></td>
              <td><%= transfer.farmer || '' %></td>
              <td></td>
              <td></td>
              <td></td>
              <td><%= transfer.startHour || '' %></td>
              <td><%= transfer.endHour || '' %></td>
              <td></td>
              <td>
                <% if (transfer.startHour && !transfer.endHour) { %>
                  Start Hour Only
                <% } else if (transfer.startHour && transfer.endHour) { %>
                  Start & End
                <% } else if (transfer.endHour && !transfer.startHour) { %>
                  End Hour Only
                <% } %>
              </td>
              <td></td>
            </tr>
            <% if (transfer.sand) { %>
              <tr class="sand-row">
                <td colspan="10">Sand: <%= transfer.sand %></td>
              </tr>
            <% } %>
            <% if (transfer.trailer) { %>
              <tr class="trailer-row">
                <td colspan="10">Trailer: <%= transfer.trailer %></td>
              </tr>
            <% } %>
          <% } %>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>