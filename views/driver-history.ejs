<!-- views/driver-history.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Driver History</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <h1>Driver History</h1>

  <div class="totals">
    <p>Total Loads: <%= totalLoads %></p>
    <p>Total Gallons: <%= totalGallons %></p>
    <p>Total Hours: <%= totalHours %></p>
    <p>Total Fuel Used: <%= totalFuel %></p>
  </div>

  <table>
    <thead>
      <tr>
        <th>Timestamp</th>
        <th>Type</th>
        <th>Tractor</th>
        <th>Details</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% allEntries.forEach(entry => { %>
        <tr>
          <td><%= new Date(entry.data.timestamp).toLocaleString() %></td>
          <td><%= entry.type %></td>
          <td><%= entry.data.tractor?.name || '-' %></td>
          <td>
            <% if (entry.type === 'load') { %>
              Gallons: <%= entry.data.gallons %>, Hours: <%= entry.data.totalHours %><br/>
              Farm: <%= entry.data.farm?.name %>, Field: <%= entry.data.field?.name %>, Pit: <%= entry.data.pit?.name %>
            <% } else if (entry.type === 'fuel') { %>
              Fuel: <%= entry.data.amount %> gal, Field: <%= entry.data.field?.name %>
            <% } else { %>
              <%= entry.data.label %>: <%= entry.data.startHour || entry.data.endHour || entry.data.trailer || entry.data.sand %>
            <% } %>
          </td>
          <td>
            <% if (entry.type === 'load') { %>
              <a href="/edit-load/<%= entry.data._id %>">âœï¸</a>
              <form method="POST" action="/delete-load/<%= entry.data._id %>" style="display:inline;">
                <button type="submit">ğŸ—‘ï¸</button>
              </form>
            <% } else if (entry.type === 'fuel') { %>
              <a href="/edit-fuel/<%= entry.data._id %>">âœï¸</a>
              <form method="POST" action="/delete-fuel/<%= entry.data._id %>" style="display:inline;">
                <button type="submit">ğŸ—‘ï¸</button>
              </form>
            <% } else { %>
              <a href="/edit-transfer/<%= entry.data._id %>">âœï¸</a>
              <form method="POST" action="/delete-transfer/<%= entry.data._id %>" style="display:inline;">
                <button type="submit">ğŸ—‘ï¸</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
