<!DOCTYPE html>
<html>
<head>
  <title>Admin Management</title>
</head>
<body>
  <h1>Manage Farms, Fields, Pits, and Tractors</h1>

  <h2>Farms</h2>
  <form action="/admin/farms" method="POST">
    <input type="text" name="name" placeholder="New farm name" required>
    <button type="submit">Add Farm</button>
  </form>
  <ul>
    <% farms.forEach(farm => { %>
      <li>
        <%= farm.name %>
        <form action="/admin/farms/<%= farm._id %>?_method=PUT" method="POST" style="display:inline;">
          <input type="text" name="name" placeholder="Rename">
          <button type="submit">Update</button>
        </form>
        <form action="/admin/farms/<%= farm._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <h2>Fields</h2>
  <form action="/admin/fields" method="POST">
    <input type="text" name="name" placeholder="New field name" required>
    <button type="submit">Add Field</button>
  </form>
  <ul>
    <% fields.forEach(field => { %>
      <li>
        <%= field.name %>
        <form action="/admin/fields/<%= field._id %>?_method=PUT" method="POST" style="display:inline;">
          <input type="text" name="name" placeholder="Rename">
          <button type="submit">Update</button>
        </form>
        <form action="/admin/fields/<%= field._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <h2>Pits</h2>
  <form action="/admin/pits" method="POST">
    <input type="text" name="name" placeholder="New pit name" required>
    <button type="submit">Add Pit</button>
  </form>
  <ul>
    <% pits.forEach(pit => { %>
      <li>
        <%= pit.name %>
        <form action="/admin/pits/<%= pit._id %>?_method=PUT" method="POST" style="display:inline;">
          <input type="text" name="name" placeholder="Rename">
          <button type="submit">Update</button>
        </form>
        <form action="/admin/pits/<%= pit._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <h2>Tractors</h2>
  <form action="/admin/tractors" method="POST">
    <input type="text" name="name" placeholder="New tractor name" required>
    <input type="number" name="gallons" placeholder="Default gallons" required>
    <button type="submit">Add Tractor</button>
  </form>
  <ul>
    <% tractors.forEach(tractor => { %>
      <li>
        <%= tractor.name %> - <%= tractor.gallons %> gallons
        <form action="/admin/tractors/<%= tractor._id %>?_method=PUT" method="POST" style="display:inline;">
          <input type="text" name="name" placeholder="Rename">
          <input type="number" name="gallons" placeholder="Gallons">
          <button type="submit">Update</button>
        </form>
        <form action="/admin/tractors/<%= tractor._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
