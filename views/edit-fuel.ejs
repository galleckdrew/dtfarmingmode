<!-- views/edit-fuel.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Edit Fuel Entry</title>
</head>
<body>
  <h1>Edit Fuel Entry</h1>
  <form method="POST" action="/edit-fuel/<%= fuel._id %>">
    <label>Fuel Amount (gallons):</label>
    <input type="number" name="amount" value="<%= fuel.amount %>" required><br>

    <button type="submit">Save Changes</button>
  </form>
</body>
</html>