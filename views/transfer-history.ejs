<!DOCTYPE html>
<html>
<head>
  <title>üöõ Transfer History</title>
  <style>
    body { font-family: Arial; margin: 20px; }
    h1 { text-align: center; }
    .summary { font-weight: bold; margin: 20px 0; text-align: center; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { border: 1px solid #ccc; padding: 8px; text-align: center; }
    th { background: #f5f5f5; }
    .filter-form { margin-bottom: 20px; }
    button { padding: 6px 12px; }
  </style>
</head>
<body>
  <h1>üöõ Transfer Hours / Hauling History</h1>

  <form class="filter-form" method="GET" action="/transfer-history">
    <label>From: <input type="date" name="from" value="<%= from || '' %>"></label>
    <label>To: <input type="date" name="to" value="<%= to || '' %>"></label>
    <label>Tractor:
      <select name="tractor">
        <option value="">All</option>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>" <%= t._id.toString() === tractor ? 'selected' : '' %>><%= t.name %></option>
        <% }) %>
      </select>
    </label>
    <button type="submit">Filter</button>
    <button type="button" onclick="window.print()">üñ®Ô∏è Print</button>
  </form>

  <div class="summary">Total Hours: <%= totalHours.toFixed(2) %></div>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Tractor</th>
        <th>Pump</th>
        <th>Farmer</th>
        <th>Start Hour</th>
        <th>End Hour</th>
        <th>Total Hours</th>
      </tr>
    </thead>
    <tbody>
      <% transfers.forEach(t => { %>
        <tr>
          <td><%= new Date(t.timestamp).toLocaleString("en-US", { timeZone: "America/New_York" }) %></td>
          <td><%= t.tractor?.name || '' %></td>
          <td><%= t.pump %></td>
          <td><%= t.farmer %></td>
          <td><%= t.startHour %></td>
          <td><%= t.endHour %></td>
          <td><%= t.totalHours?.toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
