<!DOCTYPE html>
<html>
<head>
  <title>ðŸšœ Submit Load</title>
  <style>
    body {
      padding-top: 140px;
      font-family: Arial, sans-serif;
      background: url("/dt-bg.png") no-repeat center center fixed;
      background-size: cover;
      margin: 0;
      color: #fff;
      font-size: 20px;
    }
    #recent-load-box {
      background: #007bff;
      color: white;
      border: 2px solid #0056b3;
      font-size: 20px;
      font-weight: bold;
      padding: 12px 18px;
      text-align: center;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 9999;
      box-shadow: 0 2px 8px rgba(0,0,0,0.3);
    }
    .container {
      background: rgba(0, 0, 0, 0.8);
      padding: 30px 24px;
      max-width: 700px;
      margin: 40px auto;
      border-radius: 14px;
    }
    h1, h2, h3 {
      font-weight: bold;
      text-align: center;
    }
    h1 { font-size: 32px; margin-bottom: 10px; }
    h2 { font-size: 26px; margin-top: 30px; }
    h3 { font-size: 22px; margin-bottom: 12px; color: #fff; }
    label {
      font-size: 22px;
      font-weight: bold;
      display: block;
      margin-top: 18px;
    }
    select, input {
      width: 100%;
      padding: 16px;
      margin-top: 8px;
      border-radius: 6px;
      border: none;
      font-size: 20px;
    }
    button {
      padding: 16px 24px;
      font-size: 20px;
      background: #4CAF50;
      border: none;
      color: white;
      border-radius: 6px;
      cursor: pointer;
      width: 100%;
      font-weight: bold;
      margin-top: 16px;
    }
    .form-section { margin-top: 30px; }

    /* Field tag styles */
    .field-tag {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 8px;
      font-weight: bold;
      font-size: 16px;
      margin-bottom: 6px;
      color: white;
    }
    .tag-color-0 { background-color: #ff6b6b; }
    .tag-color-1 { background-color: #6bc2ff; }
    .tag-color-2 { background-color: #51d88a; }
    .slurry-dot {
      display: inline-block;
      width: 12px;
      height: 12px;
      border-radius: 50%;
      margin-right: 8px;
    }
    .gallon-badge {
      background: #333;
      color: white;
      font-size: 16px;
      font-weight: bold;
      padding: 4px 10px;
      border-radius: 10px;
      display: inline-flex;
      align-items: center;
      margin-left: 10px;
    }

    table {
      width: 100%;
      background: rgba(255, 255, 255, 0.9);
      color: #000;
      border-collapse: collapse;
      margin-top: 16px;
    }
    th, td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: left;
    }
    th {
      background: #ddd;
    }

    .see-more-btn {
      background: #007bff;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 6px;
      margin-top: 10px;
      cursor: pointer;
    }
    .see-more-btn:hover {
      background: #0056b3;
    }
    .hidden-row { display: none; }

    .tracked {
      background: #222;
      padding: 18px;
      margin-top: 30px;
      border-radius: 10px;
      font-size: 20px;
    }
    .tracked ul { padding-left: 20px; }
  </style>
</head>
<body>

<% if (lastLoad && lastLoad.timestamp && lastLoad.tractor) { %>
  <div id="recent-load-box">
    ðŸšœ Recent Load<br>
    <div><%= new Date(lastLoad.timestamp).toLocaleString("en-US", {
      timeZone: "America/New_York",
      hour: "numeric",
      minute: "numeric",
      hour12: true
    }) %></div>
    <div>Tractor: <%= lastLoad.tractor.name %></div>
  </div>
<% } %>

<div class="container">
  <h1>D&T Manure Hauling</h1>
  <h3>Total Gallons Today: <%= totalGallons %></h3>
  <h3>Total Fuel Used Today: <%= totalFuel %></h3>

  <!-- âœ… Submit Load Form -->
  <form method="POST" action="/load">
    <h2>Submit Load</h2>

    <label>Tractor:</label>
    <select name="tractor" required>
      <% tractors.forEach(t => { %>
        <option value="<%= t._id %>"><%= t.name %> (<%= t.gallons %> gal)</option>
      <% }) %>
    </select>

    <label>Farm:</label>
    <select name="farm" required>
      <% farms.forEach(f => { %>
        <option value="<%= f._id %>"><%= f.name %></option>
      <% }) %>
    </select>

    <label>Field:</label>
    <select name="field" required>
      <% fields.forEach(fl => { %>
        <option value="<%= fl._id %>"><%= fl.name %></option>
      <% }) %>
    </select>

    <label>Pit:</label>
    <select name="pit" required>
      <% pits.forEach(p => { %>
        <option value="<%= p._id %>"><%= p.name %></option>
      <% }) %>
    </select>

    <label>Start Hour:</label>
    <input type="number" name="startHour" step="0.1" min="0" placeholder="Required On First Load">

    <button type="submit">Submit Load</button>
  </form>
  
<!-- âœ… Minimal Submit End Hour Form with Hidden Fields -->
<div class="form-section">
  <h2>Submit End Hour</h2>
  <form method="POST" action="/submit-end-hour">
    <!-- Hidden last selected values -->
    <input type="hidden" name="tractor" value="<%= lastLoad?.tractor?._id %>">
    <input type="hidden" name="farm" value="<%= lastLoad?.farm?._id %>">
    <input type="hidden" name="field" value="<%= lastLoad?.field?._id %>">
    <input type="hidden" name="pit" value="<%= lastLoad?.pit?._id %>">

    <label>End Hour:</label>
    <input type="number" name="endHour" step="0.1" min="0" required>

    <button type="submit">âœ… Submit End Hour Only</button>
  </form>
</div>

  <!-- âœ… Submit Fuel -->
  <div class="form-section">
    <h2>Submit Fuel</h2>
    <form method="POST" action="/submit-fuel">
      <label>Tractor:</label>
      <select name="tractor" required>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>"><%= t.name %></option>
        <% }) %>
      </select>

      <label>Field:</label>
      <select name="field" required>
        <% fields.forEach(f => { %>
          <option value="<%= f._id %>"><%= f.name %></option>
        <% }) %>
      </select>

      <label>Farm:</label>
      <select name="farm" required>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>"><%= f.name %></option>
        <% }) %>
      </select>

      <label>Fuel Amount (Gallons):</label>
      <input type="number" step="0.1" name="gallons" required>

      <button type="submit">Submit Fuel</button>
    </form>
  </div>

  <!-- âœ… Submit Transfer/Hauling Hours -->
  <div class="form-section">
    <h2>Submit Transfer/Hauling Hours</h2>
    <form method="POST" action="/submit-transfer">
      <label>Tractor:</label>
      <select name="tractor" required>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>"><%= t.name %></option>
        <% }) %>
      </select>

      <label>Fields:</label>
      <select name="field">
        <option value="">None</option>
        <% fields.forEach(f => { %>
          <option value="<%= f._id %>"><%= f.name %></option>
        <% }) %>
      </select>

      <label>Pump:</label>
      <select name="pump">
        <option value="">None</option>
        <% pumps.forEach(p => { %>
          <option value="<%= p._id %>"><%= p.name %></option>
        <% }) %>
      </select>

      <label>Farmer:</label>
      <select name="farmer">
        <option value="">None</option>
        <% farmers.forEach(f => { %>
          <option value="<%= f._id %>"><%= f.name %></option>
        <% }) %>
      </select>

      <label>Trailer:</label>
      <select name="trailer">
        <option value="">None</option>
        <% trailers.forEach(t => { %>
          <option value="<%= t._id %>"><%= t.name %></option>
        <% }) %>
      </select>

      <label>Sand Spreader:</label>
      <select name="sand">
        <option value="">None</option>
        <% sands.forEach(s => { %>
          <option value="<%= s._id %>"><%= s.name %></option>
        <% }) %>
      </select>

      <label>Start Hour:</label>
      <input type="text" name="startHour" required>

      <label>End Hour:</label>
      <input type="text" name="endHour">

      <button type="submit">Submit Transfer Hours</button>
    </form>
  </div>

<!-- âœ… Tracked Start Hours -->
<% if (trackedHours && Object.keys(trackedHours).length > 0) { %>
  <div class="tracked">
    <h3>âœ… Tracked Start Hours</h3>
    <ul>
      <% const seenKeys = new Set(); %>
      <% Object.entries(trackedHours).forEach(([combinedId, hour]) => {
           const [tractorId, farmId] = combinedId.split('_');
           const tractor = tractors.find(t => t._id.toString() === tractorId);
           const farm = farms.find(f => f._id.toString() === farmId);
           const displayKey = `${tractor ? tractor.name : 'Unknown Tractor'} â€“ ${farm ? farm.name : 'Unknown Farm'}`;
           if (tractor && farm && !seenKeys.has(displayKey)) {
             seenKeys.add(displayKey);
      %>
        <li><strong><%= displayKey %></strong>: <%= hour %> hrs</li>
      <% } }); %>
    </ul>
  </div>
<% } %>

<!-- ðŸ“‹ Recent Loads by Field with Tags & Slurry Dot -->
<% if (recentLoadsByField && Object.keys(recentLoadsByField).length > 0) { %>
  <div class="form-section">
    <h2>ðŸ“‹ Recent Loads</h2>
    
<% Object.entries(recentLoadsByField).forEach(([fieldName, loads], idx) => { %>
  <% const totalGallons = loads.reduce((sum, l) => sum + (l.gallons || 0), 0).toFixed(0); %>
    
 <h3>
        <span class="field-tag tag-color-<%= idx % 3 %>"><%= fieldName %></span>
        <span class="gallon-badge">
          <span class="slurry-dot tag-color-<%= idx % 3 %>"></span>
          <%= totalGallons %> gal
        </span>
      </h3>
      <table>
        <thead>
          <tr>
            <th>Timestamp</th>
            <th>Tractor</th>
            <th>Farm</th>
            <th>Pit</th>
            <th>Gallons</th>
            <th>Start Hour</th>
            <th>End Hour</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
  <% loads.forEach((load, i) => { %>
    <tr class="<%= i >= 3 ? ('hidden-row field-rows-' + idx) : '' %>" style="<%= load.isFuel ? 'background-color:#fff8dc;' : '' %>">
      <td><%= new Date(load.timestamp).toLocaleString("en-US", { timeZone: "America/New_York" }) %></td>
      <td><%= load.tractor?.name || '-' %></td>
      <td><%= load.farm?.name || '-' %></td>
      <td><%= load.pit?.name || (load.isFuel ? (load.field?.name || '-') : '-') %></td>
      <td><%= load.gallons || '-' %></td>
      <td><%= load.isFuel ? '-' : (load.startHour || '-') %></td>
      <td><%= load.isFuel ? '-' : (load.endHour || '-') %></td>
      <td>
        <form method="POST" action="/<%= load.isFuel ? 'delete-fuel' : 'delete-load' %>/<%= load._id %>" onsubmit="return confirm('Are you sure you want to delete this entry?');">
          <button type="submit" style="background:red;color:white;border:none;padding:6px 12px;border-radius:6px;cursor:pointer;">
            Remove
          </button>
        </form>
      </td>
    </tr>
  <% }) %>
</tbody>

<!-- â›½ Recent Fuel Entries -->
<% if (typeof recentFuel !== 'undefined' && recentFuel.length > 0) { %>
  <div class="form-section">
    <h2>â›½ Recent Fuel Entries</h2>
    <table style="background: #fff8dc;"> <!-- Light yellow background -->
      <thead>
        <tr>
          <th>Timestamp</th>
          <th>Tractor</th>
          <th>Farm</th>
          <th>Field</th>
          <th>Gallons</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>
        <% recentFuel.forEach(fuel => { %>
          <tr>
            <td><%= new Date(fuel.timestamp).toLocaleString("en-US", { timeZone: "America/New_York" }) %></td>
            <td><%= fuel.tractor?.name || '-' %></td>
            <td><%= fuel.farm?.name || '-' %></td>
            <td><%= fuel.field?.name || '-' %></td>
            <td><%= fuel.gallons %></td>
            <td>
              <form method="POST" action="/delete-fuel/<%= fuel._id %>" onsubmit="return confirm('Delete this fuel entry?');">
                <button type="submit" style="background:red;color:white;border:none;padding:6px 10px;border-radius:6px;cursor:pointer;">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>

<script>
  function toggleRows(index) {
    const rows = document.querySelectorAll(`.field-rows-${index}`);
    rows.forEach(row => {
      row.style.display = row.style.display === "table-row" ? "none" : "table-row";
    });

    const btn = event.target;
    btn.innerText = btn.innerText === "See More" ? "Hide" : "See More";
  }
</script>

</body>
</html>
