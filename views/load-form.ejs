<!DOCTYPE html>
<html>
<head>
  <title>ðŸšœ Submit Load</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: url('/dt-bg.jpg') no-repeat center center fixed;
      background-size: cover;
      color: #333;
    }
    .container {
      background-color: rgba(255, 255, 255, 0.92);
      padding: 20px;
      max-width: 800px;
      margin: 20px auto;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
      font-size: 2em;
    }
    h1 img {
      height: 50px;
      vertical-align: middle;
      margin-right: 10px;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }
    label {
      font-weight: bold;
      font-size: 1.1em;
    }
    select, input[type="number"], input[type="text"] {
      padding: 8px;
      font-size: 1em;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    button {
      padding: 12px;
      font-size: 1.1em;
      font-weight: bold;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background-color: #45a049;
    }
    .section-title {
      font-size: 1.2em;
      margin-top: 10px;
      color: #2c3e50;
    }
    .notice {
      font-size: 1em;
      color: #d35400;
      margin-bottom: 10px;
    }
    .info-box {
      font-size: 1em;
      background-color: #ecf0f1;
      padding: 8px;
      border-radius: 5px;
    }
    @media screen and (max-width: 768px) {
      body, label, select, input, button {
        font-size: 1.2em;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1><img src="/dt-logo.png" alt="D&T Logo"> Submit Load</h1>

    <p class="info-box">Total Gallons Today: <%= totalGallons %> | Total Fuel Today: <%= totalFuel %></p>

    <% if (lastLoad) { %>
      <p class="info-box">
        <strong>Last Load:</strong>
        <%= new Date(lastLoad.timestamp).toLocaleString("en-US", {
          timeZone: "America/New_York",
          hour12: true
        }) %> â€” <%= lastLoad.tractor.name %>
      </p>
    <% } %>

    <% if (trackedHours && Object.keys(trackedHours).length > 0) { %>
      <div class="info-box">
        <h3>âœ… Tracked Start Hours</h3>
        <ul>
          <% for (const key in trackedHours) { %>
            <li><%= key %>: <%= trackedHours[key] %></li>
          <% } %>
        </ul>
      </div>
    <% } %>

    <!-- Submit Load Form -->
    <form method="POST" action="/">
      <label>Tractor:</label>
      <select name="tractor" required>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>" <%= selectedTractorId === t._id.toString() ? 'selected' : '' %>><%= t.name %></option>
        <% }) %>
      </select>

      <label>Farm:</label>
      <select name="farm" required>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>" <%= selectedFarmId === f._id.toString() ? 'selected' : '' %>><%= f.name %></option>
        <% }) %>
      </select>

      <label>Field:</label>
      <select name="field" required>
        <% fields.forEach(fl => { %>
          <option value="<%= fl._id %>" <%= selectedFieldId === fl._id.toString() ? 'selected' : '' %>><%= fl.name %></option>
        <% }) %>
      </select>

      <label>Pit:</label>
      <select name="pit">
        <% pits.forEach(p => { %>
          <option value="<%= p._id %>"><%= p.name %></option>
        <% }) %>
      </select>

      <label>Start Hour:</label>
      <input type="number" step="0.01" name="startHour">

      <label>End Hour:</label>
      <input type="number" step="0.01" name="endHour">

      <button type="submit">Submit Load</button>
    </form>

    <!-- Submit End Hour Form -->
    <h2 class="section-title">Submit Only End Hour</h2>
    <form method="POST" action="/submit-end-hour">
      <label>Tractor:</label>
      <select name="tractor" required>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>"><%= t.name %></option>
        <% }) %>
      </select>

      <label>Farm:</label>
      <select name="farm" required>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>"><%= f.name %></option>
        <% }) %>
      </select>

      <label>Field:</label>
      <select name="field" required>
        <% fields.forEach(fl => { %>
          <option value="<%= fl._id %>"><%= fl.name %></option>
        <% }) %>
      </select>

      <label>End Hour:</label>
      <input type="number" step="0.01" name="endHour" required>

      <button type="submit">Submit End Hour</button>
    </form>
  </div>
</body>
</html>
