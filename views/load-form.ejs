<!DOCTYPE html>
<html>
<head>
  <title>ðŸšœ Submit Load</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: url('/dt-bg.png') no-repeat center center fixed;
      background-size: cover;
    }

    .container {
      background-color: rgba(255, 255, 255, 0.75);
      max-width: 850px;
      margin: 30px auto;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.25);
    }

    h1 {
      text-align: center;
      font-size: 1.8em;
      margin-bottom: 10px;
    }

    .totals {
      text-align: center;
      font-weight: bold;
      font-size: 1.3em;
      margin-bottom: 15px;
    }

    .last-load {
      text-align: center;
      font-size: 1.1em;
      margin-bottom: 25px;
    }

    form {
      margin-bottom: 30px;
    }

    label {
      display: block;
      margin: 10px 0 5px;
      font-weight: bold;
    }

    select, input[type="number"], input[type="text"] {
      width: 100%;
      padding: 8px;
      font-size: 1em;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button {
      margin-top: 12px;
      width: 100%;
      padding: 10px;
      font-size: 1em;
      font-weight: bold;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    .section {
      margin-top: 40px;
      border-top: 2px solid #ccc;
      padding-top: 25px;
    }

    @media (max-width: 600px) {
      h1 { font-size: 1.4em; }
      .totals { font-size: 1.1em; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>ðŸšœ Submit Load</h1>

    <div class="totals">
      Total Gallons Today: <%= totalGallons %>
      Total Fuel Used: <%= totalFuel %>
    </div>

    <% if (lastLoad) { %>
      <div class="last-load">
        <strong>Last Load:</strong>
        <%= new Date(lastLoad.timestamp).toLocaleString("en-US", {
          timeZone: "America/New_York", hour12: true
        }) %>
        â€“ <%= lastLoad.tractor?.name %> â€“ <%= lastLoad.gallons ?? '' %> gal
      </div>
    <% } %>

    <!-- Submit Load -->
    <form action="/load" method="POST">
      <label for="tractor">Tractor</label>
      <select name="tractor" required>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>" <%= t._id.toString() === selectedTractorId ? 'selected' : '' %>><%= t.name %></option>
        <% }) %>
      </select>

      <label for="farm">Farm</label>
      <select name="farm" required>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>" <%= f._id.toString() === selectedFarmId ? 'selected' : '' %>><%= f.name %></option>
        <% }) %>
      </select>

      <label for="field">Field</label>
      <select name="field" required>
        <% fields.forEach(f => { %>
          <option value="<%= f._id %>" <%= f._id.toString() === selectedFieldId ? 'selected' : '' %>><%= f.name %></option>
        <% }) %>
      </select>

      <label for="pit">Pit</label>
      <select name="pit">
        <% pits.forEach(p => { %>
          <option value="<%= p._id %>"><%= p.name %></option>
        <% }) %>
      </select>

      <label for="startHour">Start Hour</label>
      <input type="text" name="startHour" placeholder="Optional (e.g. 8.0)">

      <button type="submit">Submit Load</button>
    </form>

    <!-- Submit End Hour -->
    <div class="section">
      <h2>Submit End Hour</h2>
      <form action="/load/submit-end-hour" method="POST">
        <label for="endHour">End Hour</label>
        <input type="text" name="endHour" required placeholder="e.g. 15.5">
        <button type="submit">Submit End Hour</button>
      </form>
    </div>

    <!-- Submit Fuel -->
    <div class="section">
      <h2>Submit Fuel Usage</h2>
      <form action="/load/submit-fuel" method="POST">
        <label for="tractor">Tractor</label>
        <select name="tractor" required>
          <% tractors.forEach(t => { %>
            <option value="<%= t._id %>"><%= t.name %></option>
          <% }) %>
        </select>

        <label for="field">Field</label>
        <select name="field" required>
          <% fields.forEach(f => { %>
            <option value="<%= f._id %>"><%= f.name %></option>
          <% }) %>
        </select>

        <label for="amount">Fuel Amount (gal)</label>
        <input type="number" step="0.1" name="amount" required>

        <button type="submit">Submit Fuel</button>
      </form>
    </div>

    <!-- Submit Transfer Hours -->
    <div class="section">
      <h2>Submit Transfer Hours / Hauling</h2>
      <form action="/load/submit-transfer" method="POST">
        <label for="tractor">Tractor</label>
        <select name="tractor" required>
          <% tractors.forEach(t => { %>
            <option value="<%= t._id %>"><%= t.name %></option>
          <% }) %>
        </select>

        <label for="pump">Pump</label>
        <input type="text" name="pump" placeholder="Pump name or ID" required>

        <label for="farmer">Farmer</label>
        <input type="text" name="farmer" placeholder="Farmer name" required>

        <label for="trailer">Trailer</label>
        <input type="text" name="trailer" placeholder="Optional">

        <label for="sand">Sand</label>
        <input type="text" name="sand" placeholder="Optional">

        <label for="startHour">Start Hour</label>
        <input type="text" name="startHour" placeholder="e.g. 8.0" required>

        <label for="endHour">End Hour</label>
        <input type="text" name="endHour" placeholder="e.g. 15.5" required>

        <button type="submit">Submit Transfer Hours</button>
      </form>
    </div>

  </div>
</body>
</html>
