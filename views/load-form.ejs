<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>D&T Manure Hauling</title>
  <style>
    /* Full-screen background image (Fendt tractor) */
    body {
      margin: 0;
      padding: 0;
      background: url('/images/fendt_tractor.jpg') no-repeat center center fixed;
      background-size: cover;
      font-family: Arial, sans-serif;
    }
    /* Container for content */
    .container {
      max-width: 600px;
      margin: 0 auto;
      padding: 1em;
      color: #fff;
    }
    /* Header section: title, totals, last load info */
    .header {
      text-align: center;
      margin-bottom: 2em;
    }
    .header h1 {
      font-weight: bold;
      margin-bottom: 0.5em;
      /* Optional: add text-shadow for readability on bright backgrounds */
      text-shadow: 2px 2px 4px #000;
    }
    .totals p {
      margin: 0.2em 0;
      font-size: 1.2em;
      font-weight: bold;
      text-shadow: 1px 1px 2px #000;
    }
    .last-load {
      margin-top: 0.5em;
      font-size: 0.9em;
      text-shadow: 1px 1px 2px #000;
    }
    /* Form sections styling */
    .form-section {
      margin-bottom: 2em;
    }
    .form-section h2 {
      margin-bottom: 0.5em;
      color: #fff;
      text-shadow: 1px 1px 2px #000;
    }
    /* Form elements */
    label {
      display: block;
      margin: 0.5em 0 0.2em;
    }
    input, select {
      width: 100%;
      padding: 0.5em;
      margin-bottom: 1em;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 1em;
      /* Ensure input text is readable (black on white background) */
      color: #000;
      box-sizing: border-box;
    }
    /* Submit buttons */
    button {
      background-color: #3c8c3c;  /* green background */
      color: #fff;
      border: none;
      padding: 0.5em 1em;
      font-size: 1em;
      font-weight: bold;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background-color: #337033;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Title and summary totals -->
    <div class="header">
      <h1>D&amp;T Manure Hauling</h1>
      <div class="totals">
        <p>Total Gallons: <%= totalGallons %></p>
        <p>Total Fuel Used: <%= totalFuel %></p>
      </div>
      <div class="last-load">
        Most Recent Load: <%= lastLoadTractor %> â€“ <%= lastLoadGallons %> gallons at <%= lastLoadTime %>
      </div>
    </div>

    <!-- Submit Load section -->
    <div class="form-section">
      <h2>Submit Load</h2>
      <form action="/submit-load" method="POST">
        <label for="tractor">Tractor</label>
        <select name="tractor" id="tractor" required>
          <option value="" disabled selected>Select Tractor</option>
          <% tractors.forEach(function(tr) { %>
            <option value="<%= tr.id %>"><%= tr.name %></option>
          <% }); %>
        </select>

        <label for="farm">Farm</label>
        <input type="text" name="farm" id="farm" placeholder="Farm name" required />

        <label for="field">Field</label>
        <input type="text" name="field" id="field" placeholder="Field name or number" required />

        <label for="pit">Pit</label>
        <input type="text" name="pit" id="pit" placeholder="Pit name/location" required />

        <label for="startHour">Start Hour (optional)</label>
        <input type="number" name="startHour" id="startHour" placeholder="Starting hour (if any)" />

        <button type="submit">Submit Load</button>
      </form>
    </div>

    <!-- Submit End Hour section -->
    <div class="form-section">
      <h2>Submit End Hour</h2>
      <form action="/submit-endhour" method="POST">
        <label for="endHour">End Hour</label>
        <input type="number" name="endHour" id="endHour" placeholder="Ending hour" required />

        <button type="submit">Submit End Hour</button>
      </form>
    </div>

    <!-- Submit Fuel section -->
    <div class="form-section">
      <h2>Submit Fuel</h2>
      <form action="/submit-fuel" method="POST">
        <label for="fuelTractor">Tractor</label>
        <select name="tractor" id="fuelTractor" required>
          <option value="" disabled selected>Select Tractor</option>
          <% tractors.forEach(function(tr) { %>
            <option value="<%= tr.id %>"><%= tr.name %></option>
          <% }); %>
        </select>

        <label for="fuelField">Field</label>
        <input type="text" name="field" id="fuelField" placeholder="Field name or number" required />

        <label for="fuelAmount">Fuel Amount (gallons)</label>
        <input type="number" name="amount" id="fuelAmount" placeholder="Gallons of fuel" required />

        <button type="submit">Submit Fuel</button>
      </form>
    </div>

    <!-- Submit Transfer Hours section -->
    <div class="form-section">
      <h2>Submit Transfer Hours</h2>
      <form action="/submit-transfer" method="POST">
        <label for="transTractor">Tractor</label>
        <select name="tractor" id="transTractor" required>
          <option value="" disabled selected>Select Tractor</option>
          <% tractors.forEach(function(tr) { %>
            <option value="<%= tr.id %>"><%= tr.name %></option>
          <% }); %>
        </select>

        <label for="pump">Pump</label>
        <input type="text" name="pump" id="pump" placeholder="Pump name/ID" required />

        <label for="farmer">Farmer</label>
        <input type="text" name="farmer" id="farmer" placeholder="Farmer's name" required />

        <label for="startHour2">Start Hour</label>
        <input type="number" name="startHour" id="startHour2" placeholder="Start hour reading" required />

        <label for="endHour2">End Hour</label>
        <input type="number" name="endHour" id="endHour2" placeholder="End hour reading" required />

        <button type="submit">Submit Transfer Hours</button>
      </form>
    </div>
  </div>
</body>
</html>
