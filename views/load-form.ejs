<!DOCTYPE html>
<html>
<head>
  <title>ðŸšœ Submit Load</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background-color: #f3f3f3;
    }

    form {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      max-width: 600px;
      margin: auto;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h1 {
      text-align: center;
    }

    label {
      display: block;
      margin-top: 10px;
    }

    input, select, button {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      font-size: 16px;
    }

    .summary {
      margin-top: 20px;
      text-align: center;
    }

    .tracked-list {
      margin-top: 15px;
      font-size: 14px;
      background: #eef;
      padding: 10px;
      border-radius: 6px;
    }
  </style>
</head>
<body>
  <h1>ðŸšœ Submit Load</h1>

  <div class="summary">
    <p><strong>Total Gallons Today:</strong> <%= totalGallons %></p>
    <% if (lastLoad) { %>
      <p><strong>Last Load:</strong> <%= new Date(lastLoad.timestamp).toLocaleString("en-US", { timeZone: "America/New_York", hour12: true }) %> by <%= lastLoad.tractor?.name || "Unknown" %></p>
    <% } else { %>
      <p><em>No loads submitted yet today.</em></p>
    <% } %>
  </div>

  <form action="/load" method="POST">
    <label for="tractor">Tractor:</label>
    <select name="tractor" id="tractorSelect" required>
      <% tractors.forEach(t => { %>
        <option value="<%= t._id %>"><%= t.name %> â€” <%= t.gallons %> gal</option>
      <% }) %>
    </select>

    <label for="farm">Farm:</label>
    <select name="farm" id="farmSelect" required>
      <% farms.forEach(f => { %>
        <option value="<%= f._id %>"><%= f.name %></option>
      <% }) %>
    </select>

    <label for="field">Field:</label>
    <select name="field" required>
      <% fields.forEach(f => { %>
        <option value="<%= f._id %>"><%= f.name %></option>
      <% }) %>
    </select>

    <label for="pit">Pit:</label>
    <select name="pit" required>
      <% pits.forEach(p => { %>
        <option value="<%= p._id %>"><%= p.name %></option>
      <% }) %>
    </select>

    <label for="startHour">Start Hour (optional unless new farm):</label>
    <input type="number" name="startHour" min="0" max="23" placeholder="e.g., 7">

    <label for="endHour">End Hour (optional):</label>
    <input type="number" name="endHour" min="0" max="23" placeholder="e.g., 15">

    <button type="submit">Submit Load</button>
  </form>

  <!-- âœ… Current tracked start hours -->
  <div id="trackedHours" class="tracked-list" style="display:none">
    <h3>ðŸ§  Currently Tracked Start Hours:</h3>
    <ul id="trackedList"></ul>
  </div>

  <script>
    fetch("/load/tracked-hours")
      .then(res => res.json())
      .then(data => {
        const keys = Object.entries(data);
        if (keys.length > 0) {
          document.getElementById("trackedHours").style.display = "block";
          const list = document.getElementById("trackedList");
          keys.forEach(([key, hour]) => {
            const li = document.createElement("li");
            const [tractor, farm] = key.split("_");
            li.textContent = `ðŸšœ Tractor ${tractor} @ Farm ${farm} â†’ Start: ${hour}`;
            list.appendChild(li);
          });
        }
      });
  </script>
</body>
</html>
