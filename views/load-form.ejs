<!DOCTYPE html>
<html>
<head>
  <title>ðŸšœ Submit Load</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: url("/dt-bg.png") no-repeat center center fixed;
      background-size: cover;
      margin: 0;
      padding: 0;
      color: #fff;
    }
    .container {
      background: rgba(0, 0, 0, 0.7);
      padding: 20px;
      max-width: 600px;
      margin: 40px auto;
      border-radius: 10px;
    }
    select, input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 4px;
      border: none;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      background: #4CAF50;
      border: none;
      color: white;
      border-radius: 4px;
      cursor: pointer;
    }
    .tracked {
      background: #222;
      padding: 10px;
      margin-top: 20px;
      border-radius: 6px;
    }
    .tracked ul {
      padding-left: 20px;
    }
    h1, h2, h3 {
      text-align: center;
    }
    label {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>ðŸšœ Submit Load</h1>
    <h3>Total Gallons Today: <%= totalGallons %></h3>

    <% if (lastLoad) { %>
      <p><strong>Last Load:</strong> <%= new Date(lastLoad.timestamp).toLocaleString("en-US", { timeZone: "America/New_York", hour12: true }) %> by <%= lastLoad.tractor.name %></p>
    <% } %>

    <form method="POST" action="/load">
      <label for="tractor">Tractor:</label>
      <select name="tractor" required>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>"><%= t.name %> (<%= t.gallons %> gal)</option>
        <% }) %>
      </select>

      <label for="farm">Farm:</label>
      <select name="farm" required>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>"><%= f.name %></option>
        <% }) %>
      </select>

      <label for="field">Field:</label>
      <select name="field" required>
        <% fields.forEach(f => { %>
          <option value="<%= f._id %>"><%= f.name %></option>
        <% }) %>
      </select>

      <label for="pit">Pit:</label>
      <select name="pit" required>
        <% pits.forEach(p => { %>
          <option value="<%= p._id %>"><%= p.name %></option>
        <% }) %>
      </select>

      <label for="startHour">Start Hour (optional unless new farm):</label>
      <input type="number" name="startHour" id="startHour" step="0.1" min="0" placeholder= optional>

      <label for="endHour">End Hour (optional):</label>
      <input type="number" name="endHour" id="endHour" step="0.1" min="0" placeholder= optional>

      <button type="submit">Submit Load</button>
    </form>

    <% if (trackedHours && Object.keys(trackedHours).length > 0) { %>
      <div class="tracked">
        <h3>âœ… Tracked Start Hours</h3>
        <ul>
          <% for (let key in trackedHours) { %>
            <li><strong><%= key %></strong>: <%= trackedHours[key] %></li>
          <% } %>
        </ul>
      </div>
    <% } %>
  </div>
</body>
</html>
