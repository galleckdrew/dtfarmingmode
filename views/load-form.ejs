<!DOCTYPE html>
<html>
<head>
  <title>ðŸšœ Submit Load</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: url('/dt-bg.jpg') no-repeat center center fixed;
      background-size: cover;
    }
    .container {
      background-color: rgba(255, 255, 255, 0.95);
      max-width: 900px;
      margin: 40px auto;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 15px rgba(0,0,0,0.3);
    }
    h1 {
      text-align: center;
      font-size: 2em;
      margin-bottom: 20px;
    }
    h1 img {
      height: 60px;
      vertical-align: middle;
      margin-right: 10px;
    }
    form {
      margin-bottom: 30px;
    }
    label {
      display: block;
      margin: 10px 0 5px;
      font-weight: bold;
    }
    select, input[type="number"], input[type="text"] {
      width: 100%;
      padding: 10px;
      font-size: 1.1em;
      border: 1px solid #ccc;
      border-radius: 6px;
    }
    button {
      margin-top: 15px;
      width: 100%;
      padding: 12px;
      font-size: 1.1em;
      font-weight: bold;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    button:hover {
      background-color: #45a049;
    }
    .section {
      margin-top: 40px;
      border-top: 2px solid #ccc;
      padding-top: 30px;
    }
    .totals {
      text-align: center;
      font-weight: bold;
      margin-bottom: 20px;
      font-size: 1.2em;
    }
    @media (max-width: 600px) {
      h1 {
        font-size: 1.5em;
      }
      select, input, button {
        font-size: 1.1em;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1><img src="/dt-logo.png" alt="D&T Logo"> Submit Load</h1>

    <div class="totals">
      Total Gallons Today: <%= totalGallons %> | Total Fuel Used: <%= totalFuel %>
    </div>

    <form action="/load" method="POST">
      <label for="tractor">Tractor</label>
      <select name="tractor" required>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>" <%= t._id.toString() === selectedTractorId ? 'selected' : '' %>><%= t.name %></option>
        <% }) %>
      </select>

      <label for="farm">Farm</label>
      <select name="farm" required>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>" <%= f._id.toString() === selectedFarmId ? 'selected' : '' %>><%= f.name %></option>
        <% }) %>
      </select>

      <label for="field">Field</label>
      <select name="field" required>
        <% fields.forEach(f => { %>
          <option value="<%= f._id %>" <%= f._id.toString() === selectedFieldId ? 'selected' : '' %>><%= f.name %></option>
        <% }) %>
      </select>

      <label for="pit">Pit</label>
      <select name="pit">
        <% pits.forEach(p => { %>
          <option value="<%= p._id %>"><%= p.name %></option>
        <% }) %>
      </select>

      <label for="startHour">Start Hour</label>
      <input type="text" name="startHour" placeholder="Optional (for first load only)">

      <button type="submit">Submit Load</button>
    </form>

    <!-- Submit End Hour Only -->
    <div class="section">
      <h2>Submit End Hour Only</h2>
      <form action="/load/submit-end-hour" method="POST">
        <label for="endHour">End Hour</label>
        <input type="text" name="endHour" required placeholder="e.g. 15.5">

        <button type="submit">Submit End Hour</button>
      </form>
    </div>

    <!-- Submit Fuel -->
    <div class="section">
      <h2>Submit Fuel Usage</h2>
      <form action="/load/submit-fuel" method="POST">
        <label for="tractor">Tractor</label>
        <select name="tractor" required>
          <% tractors.forEach(t => { %>
            <option value="<%= t._id %>"><%= t.name %></option>
          <% }) %>
        </select>

        <label for="field">Field</label>
        <select name="field" required>
          <% fields.forEach(f => { %>
            <option value="<%= f._id %>"><%= f.name %></option>
          <% }) %>
        </select>

        <label for="amount">Fuel Amount (gal)</label>
        <input type="number" step="0.1" name="amount" required>

        <button type="submit">Submit Fuel</button>
      </form>
    </div>
  </div>
</body>
</html>
