<!DOCTYPE html>
<html>
<head>
  <title>üöú Submit Load</title>
  <style>
    body {
      background: url("/dt-bg.png") no-repeat center center fixed;
      background-size: cover;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      color: white;
    }

    .form-container {
      background-color: rgba(0, 0, 0, 0.7);
      padding: 30px;
      max-width: 500px;
      margin: 40px auto;
      border-radius: 10px;
    }

    label {
      display: block;
      margin-top: 15px;
      font-size: 1.2em;
    }

    select, input {
      width: 100%;
      padding: 10px;
      font-size: 1.1em;
      margin-top: 5px;
      border-radius: 5px;
      border: none;
    }

    .summary {
      text-align: center;
      margin-bottom: 20px;
      font-weight: bold;
    }

    button {
      padding: 10px;
      font-size: 1.1em;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 5px;
      width: 100%;
      cursor: pointer;
    }

    .dual-buttons {
      display: flex;
      justify-content: space-between;
      gap: 10px;
      margin-top: 15px;
    }

    .dual-buttons form {
      flex: 1;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
      font-size: 2em;
    }

    @media (max-width: 600px) {
      .form-container {
        padding: 20px;
        margin: 20px;
      }

      h1 {
        font-size: 1.5em;
      }

      .dual-buttons {
        flex-direction: column;
      }

      .dual-buttons form {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h1>üöú Submit Load</h1>

    <div class="summary">
      <p>Total Gallons Today: <%= totalGallons %></p>
      <% if (lastLoad) { %>
        <p>Last Load: <%= new Date(lastLoad.timestamp).toLocaleString("en-US", { timeZone: "America/New_York", hour12: true }) %> by <%= lastLoad.tractor?.name || "Unknown" %></p>
      <% } else { %>
        <p><em>No loads submitted today</em></p>
      <% } %>
    </div>

    <!-- Main Load Form -->
    <form action="/load" method="POST">
      <label for="tractor">Tractor/Gallons/Pump/Crawler:</label>
      <select name="tractor" id="tractorSelect" required>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>" <%= t._id.toString() === selectedTractorId ? 'selected' : '' %>>
            <%= t.name %> - <%= t.gallons %> gallons
          </option>
        <% }) %>
      </select>

      <label for="farm">Farm:</label>
      <select name="farm" id="farmSelect" required>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>" <%= f._id.toString() === selectedFarmId ? 'selected' : '' %>>
            <%= f.name %>
          </option>
        <% }) %>
      </select>

      <label for="field">Field:</label>
      <select name="field" required>
        <% fields.forEach(fl => { %>
          <option value="<%= fl._id %>" <%= fl._id.toString() === selectedFieldId ? 'selected' : '' %>>
            <%= fl.name %>
          </option>
        <% }) %>
      </select>

      <label for="pit">Pit:</label>
      <select name="pit" required>
        <% pits.forEach(p => { %>
          <option value="<%= p._id %>"><%= p.name %></option>
        <% }) %>
      </select>

      <label for="startHour">Start Hour:</label>
      <input type="number" name="startHour" placeholder="Optional">

      <label for="endHour">End Hour:</label>
      <input type="number" name="endHour" placeholder="Optional">

      <button type="submit">Submit Load</button>
    </form>
<!-- Submit End Hour Only -->
<form method="POST" action="/submit-end-hour" style="margin-top: 20px;">
  <input type="hidden" name="tractor" value="<%= selectedTractorId || '' %>">
  <input type="hidden" name="farm" value="<%= selectedFarmId || '' %>">
  <input type="hidden" name="field" value="<%= selectedFieldId || '' %>">

  <label for="endHourOnly"><strong>Submit Only End Hour:</strong></label>
  <input type="number" name="endHour" id="endHourOnly" step="0.1" min="0" required>

  <button type="submit" style="margin-top: 10px;">Submit End Hour</button>
</form>


    <!-- Separate End Hour Form -->
    <div class="dual-buttons">
      <form method="POST" action="/submit-end-hour">
        <input type="hidden" name="tractor" value="<%= selectedTractorId || '' %>">
        <input type="hidden" name="farm" value="<%= selectedFarmId || '' %>">
        <input type="hidden" name="field" value="<%= selectedFieldId || '' %>">
        <input type="number" name="endHour" step="0.1" min="0" placeholder="End Hour" required>
        <button type="submit">Submit End Hour</button>
      </form>
    </div>
  </div>

  <script>
    let previousFarm = document.getElementById("farmSelect").value;
    document.getElementById("farmSelect").addEventListener("change", function () {
      const startHourInput = document.querySelector("input[name='startHour']");
      if (!startHourInput.value) {
        alert("‚ö†Ô∏è Please enter a start hour before switching farms.");
        this.value = previousFarm;
      } else {
        previousFarm = this.value;
      }
    });
  </script>
</body>
