<!DOCTYPE html>
<html>
<head>
  <title>Driver History</title>
  <style>
    body { font-family: Arial; padding: 20px; background: #f9f9f9; }
    h2 { text-align: center; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { padding: 10px; border: 1px solid #ccc; text-align: left; }
    th { background-color: #007BFF; color: white; }
    tfoot { font-weight: bold; background: #eee; }
  </style>
</head>
<body>
  <h2>Driver Load History</h2>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Tractor</th>
        <th>Farm</th>
        <th>Field</th>
        <th>Pit</th>
        <th>Gallons</th>
        <th>Start</th>
        <th>End</th>
      </tr>
    </thead>
    <tbody>
      <% loads.forEach(load => { %>
        <tr>
          <td><%= new Date(load.createdAt).toLocaleString() %></td>
          <td><%= load.tractor?.name %></td>
          <td><%= load.farm?.name %></td>
          <td><%= load.field?.name %></td>
          <td><%= load.pit?.name %></td>
          <td><%= load.gallons %></td>
          <td><%= load.startHour %></td>
          <td><%= load.endHour ?? "-" %></td>
        </tr>
      <% }) %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="5">Total Gallons</td>
        <td colspan="3"><%= totalGallons %></td>
      </tr>
    </tfoot>
  </table>
</body>
</html>
