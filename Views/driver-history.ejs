<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>D&T Manure Hauling - Driver History</title>
  <style>
    body {
      background: url('/login-bg.png') no-repeat center center fixed;
      background-size: cover;
      font-family: Arial, sans-serif;
      color: #000;
    }
    table {
      width: 95%;
      margin: 20px auto;
      border-collapse: collapse;
      background: rgba(220, 220, 220, 0.8);
      color: #000;
    }
    th, td {
      padding: 12px;
      border: 1px solid #999;
      text-align: left;
    }
    th {
      background: #ccc;
    }
    h1, h2 {
      text-align: center;
      margin-top: 20px;
      color: #fff;
    }
    .print-btn {
      text-align: center;
      margin-bottom: 15px;
    }
    .print-btn button {
      background-color: #444;
      color: white;
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    .print-btn button:hover {
      background-color: #666;
    }
    .totals, .filters {
      width: 95%;
      margin: 20px auto;
      background: rgba(240, 240, 240, 0.8);
      padding: 10px;
      border-radius: 6px;
    }
    .totals {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }
    .filters {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
    .filters label {
      font-weight: bold;
    }
    .btn {
      background-color: #444;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      text-decoration: none;
      margin: 0 4px;
      cursor: pointer;
    }
    .btn:hover {
      background-color: #666;
    }
    .yellow-row {
      background-color: #fff8dc !important;
    }
    form {
      display: inline;
    }
    @media print {
      .print-btn, .filters, .btn {
        display: none !important;
      }
      body {
        background: none;
      }
    }
  </style>
</head>
<body>
  <h1>D&T Manure Hauling - Driver History</h1>

  <div class="print-btn">
    <button onclick="window.print()">Print Report</button>
  </div>

  <div class="totals">
    <p>Total Loads: <%= totalLoads %></p>
    <p>Total Gallons: <%= totalGallons %></p>
    <p>Total Hours: <%= totalHours %></p>
    <p>Total Fuel Used: <%= totalFuel %></p>
    <p>Total Transfer Hours: <%= totalTransferHours %> hrs</p>
  </div>

  <form class="filters" method="GET" action="/driver-history">
    <div>
      <label for="farm">Farm:</label>
      <select name="farm" id="farm">
        <option value="">All</option>
        <% farms.forEach(f => { %>
          <option value="<%= f._id %>" <%= farm === f._id ? 'selected' : '' %>><%= f.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label for="field">Field:</label>
      <select name="field" id="field">
        <option value="">All</option>
        <% fields.forEach(fl => { %>
          <option value="<%= fl._id %>" <%= field === fl._id ? 'selected' : '' %>><%= fl.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label for="tractor">Tractor:</label>
      <select name="tractor" id="tractor">
        <option value="">All</option>
        <% tractors.forEach(t => { %>
          <option value="<%= t._id %>" <%= tractor === t._id ? 'selected' : '' %>><%= t.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label for="type">Type:</label>
      <select name="type" id="type">
        <option value="">All</option>
        <option value="load">Load</option>
        <option value="fuel">Fuel</option>
        <option value="transfer">Transfer</option>
      </select>
    </div>
    <div>
      <label for="from">From:</label>
      <input type="date" name="from" id="from" value="<%= from || '' %>">
    </div>
    <div>
      <label for="to">To:</label>
      <input type="date" name="to" id="to" value="<%= to || '' %>">
    </div>
    <div>
      <button type="submit" class="btn">Apply Filters</button>
    </div>
  </form>

  <!-- ðŸš› LOAD ENTRIES -->
  <% const loadEntries = allEntries.filter(e => e.type === 'load'); %>
  <% if (loadEntries.length > 0) { %>
    <h2>ðŸš› Load Entries</h2>
    <table>
      <thead>
        <tr>
          <th>Timestamp</th>
          <th>Tractor</th>
          <th>Farm</th>
          <th>Field / Pit</th>
          <th>Gallons</th>
          <th>Total Hours</th>
          <th>Start Hour</th>
          <th>End Hour</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% loadEntries.forEach(e => { const l = e.data; %>
          <tr>
            <td><%= new Date(l.timestamp).toLocaleString() %></td>
            <td><%= l.tractor?.name || '-' %></td>
            <td><%= l.farm?.name || '-' %></td>
            <td><%= (l.field?.name || '-') + ' / ' + (l.pit?.name || '-') %></td>
            <td><%= l.gallons || '-' %></td>
            <td><%= l.totalHours || '-' %></td>
            <td><%= l.startHour || '-' %></td>
            <td><%= l.endHour || '-' %></td>
            <td>
              <a href="/edit-load/<%= l._id %>" class="btn">Edit</a>
              <form method="POST" action="/delete-load/<%= l._id %>">
                <button type="submit" class="btn">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <!-- â›½ FUEL ENTRIES -->
  <% const fuelEntries = allEntries.filter(e => e.type === 'fuel'); %>
  <% if (fuelEntries.length > 0) { %>
    <h2>â›½ Fuel Entries</h2>
    <table>
      <thead>
        <tr>
          <th>Timestamp</th>
          <th>Tractor</th>
          <th>Farm</th>
          <th>Field</th>
          <th>Gallons</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% fuelEntries.forEach(e => { const f = e.data; %>
          <tr class="yellow-row">
            <td><%= new Date(f.timestamp).toLocaleString() %></td>
            <td><%= f.tractor?.name || '-' %></td>
            <td><%= f.farm?.name || '-' %></td>
            <td><%= f.field?.name || '-' %></td>
            <td><%= f.gallons || '-' %></td>
            <td>
              <a href="/edit-fuel/<%= f._id %>" class="btn">Edit</a>
              <form method="POST" action="/delete-fuel/<%= f._id %>">
                <button type="submit" class="btn">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <!-- ðŸšœ TRANSFER ENTRIES -->
  <% const transferEntries = allEntries.filter(e => e.type === 'transfer'); %>
  <% if (transferEntries.length > 0) { %>
    <h2>ðŸšœ Transfer/Hauling Entries</h2>
    <table>
      <thead>
        <tr>
          <th>Timestamp</th>
          <th>Tractor</th>
          <th>Field</th>
          <th>Start Hour</th>
          <th>End Hour</th>
          <th>Total Hours</th>
          <th>Pump</th>
          <th>Farmer</th>
          <th>Trailer</th>
          <th>Sand</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% transferEntries.forEach(e => { const t = e.data; const total = (t.endHour && t.startHour) ? (parseFloat(t.endHour) - parseFloat(t.startHour)).toFixed(2) : '-'; %>
          <tr>
            <td><%= new Date(t.timestamp).toLocaleString() %></td>
            <td><%= t.tractor?.name || '-' %></td>
            <td><%= t.field?.name || '-' %></td>
            <td><%= t.startHour || '-' %></td>
            <td><%= t.endHour || '-' %></td>
            <td><%= total %></td>
            <td><%= t.pump?.name || '-' %></td>
            <td><%= t.farmer?.name || '-' %></td>
            <td><%= t.trailer?.name || '-' %></td>
            <td><%= t.sand?.name || '-' %></td>
            <td>
              <a href="/edit-transfer/<%= t._id %>" class="btn">Edit</a>
              <form method="POST" action="/delete-transfer/<%= t._id %>">
                <button type="submit" class="btn">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</body>
</html>
